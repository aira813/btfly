#!/usr/bin/env python
# -*- coding: utf-8 -*-

import os
import sys

has_bootstrap = False
try:
    import bootstrap
    # Add BTFLY_HOME, BTFLY_HOME/btfly to sys.path
    parent, bin_dir = bootstrap.set_lib_path(__file__)
    has_bootstrap = True
except:
    pass

import btfly.main

if __name__ == '__main__':
    home_dir = None
    if has_bootstrap:
        home_dir = parent
    else:
        home_dir = os.getcwd()
    sys.exit(btfly.main.Main(__file__, home_dir).run())
